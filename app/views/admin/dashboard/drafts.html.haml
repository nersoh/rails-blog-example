.page-header
	%h1 
		Drafts
		%small posts

- if @posts.any?
	%table{class: "table table-striped"}
		%thead
			%th Title
			%th Published
			%th Created at
		%tbody
			- @posts.each do |post|
				%td= post.title
				%td= post.published
				%td= post.created_at
				%td
					= link_to "edit", edit_post_path(post)
					\|
					= link_to "remove", post, method: :delete, data: {confirm: "Are you sure?"}
- else
	.jumbotron
		%p No records found